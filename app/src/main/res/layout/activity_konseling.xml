<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/Blue"
    tools:context=".KonselingActivity">

    <TextView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Form Konseling"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIK"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/nik"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="NIK"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Nama"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/tgllahir"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Tanggal Lahir"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Alamat"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keluhan"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="left"
        android:textColor="#FFFF"
        android:layout_marginBottom="5dp"/>

    <EditText
        android:id="@+id/keluhan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Keluhan"
        android:textSize="18dp"
        android:textColor="#FFFF"
        android:textColorHint="#dde1e7"
        android:paddingLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnsimpan1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey_font"
            android:text="TAMBAH"
            android:padding="10dp"
            android:textColor="#FFFFFF"
            android:layout_marginRight="4dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btntampil1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TAMPIL"
            android:padding="10dp"
            android:background="@color/grey_font"
            android:textColor="#FFFFFF"
            android:layout_marginRight="4dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnedit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT"
            android:padding="10dp"
            android:background="@color/grey_font"
            android:textColor="#FFFFFF"
            android:layout_marginRight="4dp"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnhapus1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HAPUS"
            android:padding="10dp"
            android:background="@color/grey_font"
            android:textColor="#FFFFFF"
            android:layout_marginRight="4dp"
            />
    </LinearLayout>
</LinearLayout>